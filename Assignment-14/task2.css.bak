/* Global / layout */
:root{ --brand:#0b5ed7; --bg:#f6f8fb; --card:#fff; --muted:#606770; }
*{box-sizing:border-box}
html,body{height:100%}
body{margin:0;font-family:system-ui,-apple-system,'Segoe UI',Roboto,'Helvetica Neue',Arial;background:var(--bg);color:#111;line-height:1.5}
.container{max-width:1000px;margin:0 auto;padding:1.5rem}

/* Header */
header{background:var(--brand);color:#fff;padding:1rem 0}
.header-row{display:flex;align-items:center;justify-content:space-between;gap:1rem}
.brand{display:flex;align-items:center;gap:.75rem}
.logo{width:46px;height:46px;border-radius:6px;background:#e7f0ff;display:inline-block}
.site-title{font-weight:600}
.site-sub{font-size:.85rem;opacity:.9}

/* Navigation — desktop first */
.nav-toggle-label{display:none}
.nav-list{list-style:none;margin:0;padding:0;display:flex;gap:.75rem}
.nav-list a{color:#fff;text-decoration:none;padding:.45rem .6rem;border-radius:6px;display:inline-block}
.nav-list a:hover{background:rgba(255,255,255,0.12)}

/* Main / content */
main{background:var(--card);margin-top:1.25rem;padding:1.25rem;border-radius:8px;box-shadow:0 4px 18px rgba(15,22,30,0.06)}
.hero{display:flex;justify-content:space-between;align-items:center;gap:1rem}
.hero h1{margin:0 0 .25rem 0;font-size:1.6rem}
.meta{font-size:.95rem;color:#334}
.actions{display:flex;gap:.5rem}
.btn{background:var(--brand);color:#fff;border:none;padding:.45rem .75rem;border-radius:6px;cursor:pointer;text-decoration:none}
.btn.secondary{background:#e9eef9;color:var(--brand)}

/* Centered content helper */
.centered-section{max-width:820px;margin:1.25rem auto;text-align:center}

/* Footer */
footer{margin-top:1rem;background:#f1f3f5;color:var(--muted);padding:.75rem 0}
.footer-row{display:flex;align-items:center;justify-content:space-between;gap:1rem;flex-wrap:wrap}
.footer-copy{font-size:.9rem;color:#495057}
.footer-links{display:flex;gap:.75rem;align-items:center}
.footer-links a{color:var(--brand);text-decoration:none}

/* Responsive — small screens: stack/compact nav */
@media (max-width:700px){
	.hero{flex-direction:column;align-items:flex-start}
	/* show the menu button, collapse the nav links */
	.nav-toggle-label{display:inline-block;background:transparent;border:1px solid rgba(255,255,255,0.12);padding:.25rem .6rem;border-radius:6px;cursor:pointer;color:#fff}
	.nav-list{display:none;flex-direction:column;margin-top:.5rem;background:transparent;padding:.25rem;border-radius:6px}
	/* when the checkbox is checked, reveal the nav */
	#nav-toggle:checked ~ nav .nav-list{display:flex}
}

